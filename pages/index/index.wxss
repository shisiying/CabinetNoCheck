/**index.wxss**/
.header-search{
  position: relative;
  width: 750rpx;
}

.header-search .header-title{
  position: absolute;
  top: 140rpx;
  width: 750rpx;
  height: 110rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.header-search .header-input{
  width: 670rpx;
  height: 68rpx;
  padding-top:160rpx;
  padding-left: 340rpx;
}

.header-search .input-wrap{
     position: relative;
     width: 760rpx;
     height: 68rpx;
}

.header-search .header-input input{
  width: 250rpx;
  height: 65rpx;
  background: #fff;
  border-radius: 34rpx;
  padding: 0 35rpx;
  font-size: 28rpx;
  color: #222;
  text-align: center;
}

.header-search .clear-imput-img{
    position: absolute;
    top: 0rpx;
    width: 80rpx;
    height: 68rpx;
    text-align: right;
    right: 470rpx;
    z-index: 20;
    line-height: 68rpx;
}

.search-btn{
  position: fixed;
  bottom: 0rpx;
  width: 750rpx;
}

.search-btn .search-title{
  text-align: center;
  font-size: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color:#fbd756;
}

.showError{
  position: fixed;
  top:0;
  left: 0;
  right: 0;
  width: 100%;
  height: 70rpx;
  z-index: 100;
  background-color: #e64340;
  font-size: 26rpx;
  line-height: 70rpx;
  color: #fff;
  text-align: center;
  vertical-align: middle;
}
.history-bar{
  background: black;
  height: 50rpx;
  width: 100%;
}

.history-bar .yello-bar{
  width: 20rpx;
  height: 50rpx;
  background-color:#fbd756;
  float: left;
  margin-right: 10px;
}

.history-bar .search-history{
  width: 80%;
  height: 50rpx;
  font-size: 26rpx;
  line-height: 50rpx;
  color: #fff;


}

.note-area{
  height: 70rpx;
}

.note-area .note-text{
  font-size: 26rpx;
  text-align: center;
  line-height: 70rpx; 

}

.share{
  bottom: 400rpx;
  right: 0rpx;
  position: fixed;
  z-index: 20;
}

.contact{
  bottom: 300rpx;
